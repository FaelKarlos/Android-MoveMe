<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".atividades.EscolherRestaurante">

        <Spinner
            android:id="@+id/sp_cozinha"
            android:layout_width="227dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"

            android:layout_marginTop="44dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/btn_buscar"
            android:layout_width="213dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Buscar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sp_taxa" />

        <Spinner
            android:id="@+id/sp_votos"
            android:layout_width="227dp"
            android:layout_height="44dp"
            android:layout_marginTop="60dp"

            app:layout_constraintEnd_toEndOf="@+id/sp_cozinha"
            app:layout_constraintStart_toStartOf="@+id/sp_cozinha"
            app:layout_constraintTop_toBottomOf="@+id/sp_cozinha" />

        <Spinner
            android:id="@+id/sp_avaliacao"
            android:layout_width="227dp"
            android:layout_height="44dp"
            android:layout_marginTop="60dp"

            app:layout_constraintEnd_toEndOf="@+id/sp_votos"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/sp_votos"
            app:layout_constraintTop_toBottomOf="@+id/sp_votos" />

        <Spinner
            android:id="@+id/sp_faixaPreco"
            android:layout_width="227dp"
            android:layout_height="44dp"
            android:layout_marginTop="60dp"

            app:layout_constraintEnd_toEndOf="@+id/sp_avaliacao"
            app:layout_constraintStart_toStartOf="@+id/sp_avaliacao"
            app:layout_constraintTop_toBottomOf="@+id/sp_avaliacao" />

        <Spinner
            android:id="@+id/sp_taxa"
            android:layout_width="227dp"
            android:layout_height="44dp"
            android:layout_marginTop="60dp"

            app:layout_constraintEnd_toEndOf="@+id/sp_faixaPreco"
            app:layout_constraintStart_toStartOf="@+id/sp_faixaPreco"
            app:layout_constraintTop_toBottomOf="@+id/sp_faixaPreco" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Escolha do Restaurante"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>